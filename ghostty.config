font-family = "CommitMono"

font-size = 17 
adjust-cell-height = 30%

window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
font-thicken = true
font-thicken-strength = 50 

font-feature = -calt
font-feature = -liga
font-feature = -dlig

font-codepoint-map = U+F101-U+F27D=nonicons

# background = #131313
background = #0a0a0a
foreground = #b4b4b4
macos-titlebar-style = "hidden"
macos-icon = "chalkboard"

palette = 0=#212121
palette = 1=#ff8185
palette = 2=#81ffbb
palette = 3=#ffd6b3
palette = 4=#93c5fd
palette = 5=#818cf8
palette = 6=#97CCF1
palette = 7=#d5d5d5

palette = 8=#555555
palette = 9=#ff8185
palette = 10=#81ffbb
palette = 11=#ffd6b3
palette = 12=#93c5fd
palette = 13=#818cf8
palette = 14=#678CB1
palette = 15=#989898

cursor-style-blink = false
mouse-hide-while-typing = true
confirm-close-surface = false
bold-is-bright = true
